<h2>New Movie</h2>
<form action="/movies" method="post" enctype="multipart/form-data">
  <label>Title <input name="title" required></label>
  <label>Synopsis <textarea name="synopsis" required></textarea></label>
  <label>Rating <input type="number" name="rating" min="1" max="10" required></label>
  <label>Category
    <select name="category_id">
      {{#each categories}}<option value="{{id}}">{{name}}</option>{{/each}}
    </select>
  </label>
  <label>Poster <input type="file" name="poster"></label>
  <button>Create</button>
</form>